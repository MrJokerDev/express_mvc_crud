<!DOCTYPE html>
<html>
<head>
  <title>Todo App</title>
</head>
<body>
  <h1>Todo List</h1>

  <ul>
    <% products.forEach(function(product) { %>
      <li>
        <h2><%= product.title %></h2>
        <p><%= product.description %></p>
        <p><%= product.price %></p>
        <a href="/edit/<%= index._id %>">Edit</a>
        <form action="/delete/<%= index._id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
  </ul>

  <a href="/products/create">Create New Todo</a>
</body>
</html>

